<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cdDonor"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_marginLeft="15dp"

            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginTop="7dp"
                android:layout_gravity="center"
                />
            <ImageView
                android:id="@+id/statusActiveImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/green_status"
                android:visibility="gone"
                android:layout_toEndOf="@id/userImage"
                android:layout_marginLeft="4dp"/>
            <ImageView
                android:id="@+id/statusInactiveImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/inactive_icon"
                android:visibility="gone"
                android:layout_toEndOf="@id/userImage"
                android:layout_marginLeft="4dp"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userImage"
                android:text="Muhammad Ali"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:text="Blood Group:"
                android:textSize="13dp"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tvBloodGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:layout_toEndOf="@id/tv1"
                android:text="O+"
                android:textSize="14dp"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                />

           <androidx.cardview.widget.CardView
               android:id="@+id/cdContactDonor"
               android:layout_width="100dp"
               android:layout_height="32dp"
               android:layout_below="@id/tvBloodGroup"
               app:cardCornerRadius="6dp"
               android:layout_marginTop="8dp"
               android:layout_marginBottom="4dp"
               android:backgroundTint="@color/color_primary">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Contact"
                   android:textColor="@color/white"
                   android:textStyle="bold"
                   android:layout_gravity="center"/>
           </androidx.cardview.widget.CardView>










        </RelativeLayout>








</androidx.cardview.widget.CardView>